    <hr />

    <dl class="row"> 
        <dt class="col-sm-2">
            @Html.DisplayNameFor(e => e.Name)
        </dt>

        <dt class="col-sm-10">
            @Html.DisplayFor(e => e.Name)
        </dt>

         <dt class="col-sm-2">
            @Html.DisplayNameFor(e => e.CategoryName)
        </dt>

        <dt class="col-sm-10">
            @Html.DisplayFor(e => e.CategoryName)
        </dt>

         <dt class="col-sm-2">
            @Html.DisplayNameFor(e => e.Description)
        </dt>

        <dt class="col-sm-10">
            @Html.DisplayFor(e => e.Description)
        </dt>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(e => e.Price)
        </dt>

        <dt class="col-sm-10">
            @Html.DisplayFor(e => e.Price)
        </dt>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(e => e.Stock)
        </dt>

        <dt class="col-sm-10">
            @Html.DisplayFor(e => e.Stock)
